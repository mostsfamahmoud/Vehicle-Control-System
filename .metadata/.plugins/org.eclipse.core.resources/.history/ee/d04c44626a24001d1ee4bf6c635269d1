#include "Vehicle.h"

int main(void) {

	Vehicle v1;

	/* Initial values for Vehicle parameters */
	v1.AC = OFF;
	v1.engine = ON;
	v1.engineTempController = OFF;
	v1.speed = 50;
	v1.engineTemp = 90;
	v1.roomTemp = 35;

	printf("============= PS: Upper & Lower-case characters are accepted =============\n\n");

	startVehicleMenu(&v1);

	return EXIT_SUCCESS;
}
