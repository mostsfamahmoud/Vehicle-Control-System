#include "Vehicle.h"


void stateMenu(uint8_t *state){
	printf("a. Turn on the vehicle engine\n");
	printf("b. Turn off the vehicle engine\n");
	printf("c. Quit the system\n\n");
	fflush(stdout);
	scanf(" %c",state);
}

void vehicleEngine_ON(char state){



}


void vehicleEngine_OFF(){
	printf("\nTurn OFF Vehicle Engine\n");
	//stateMenu();

}


void quitSystem(){
	printf("Quit The System\n");
}

void setVehicleSpeed(uint8_t trafficLight, uint8_t *speed){

	switch(trafficLight){
	case 'g':
	case 'G':
		*speed = 100;
		break;
	case 'o':
	case 'O':
		*speed = 30;
		break;
	case 'r':
	case 'R':
		*speed = 0;
		break;
	}
	default:
		break;
}

void setRoomTemperature(uint8_t *roomTemperture, State *acValue){

	if((*roomTemperture < 10) || (*roomTemperture > 30)){
		*roomTemperture = 20;
		*acValue = ON;
	}
	else
		*acValue = OFF;
}


void setEngineTemperature(uint16_t *engineTemperature, State *acValue){

	if((*engineTemperature < 10) || (*engineTemperature > 30)){
		*engineTemperature = 20;
		*acValue = ON;
	}
	else
		*acValue = OFF;
}







